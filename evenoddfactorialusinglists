num = [2,3,14,5,7,0,-2]

for i in range(len(num)):
    factorial=1
    if num[i] < 0:
     print("factorial does not exist for -ve numbers")
    elif num[i] == 0:
     print("The factorial of 0 is 1")
    else:
     for x in range(1,num[i] + 1):
         factorial = factorial*x
     print('The factorial of',num[i],"is",factorial)

for i,l in enumerate(num):
    print l,
    if (l%2) == 0:
      print (" is even")
    else:
     print(" is odd")